<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_authority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/rl_accessibility_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_click"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <ImageView
                        android:id="@+id/iv_accessibility_on_off_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_accessibility_forward"
                        android:layout_toEndOf="@id/iv_accessibility_on_off_img"
                        android:gravity="center_vertical|start"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:text="无障碍服务权限"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_accessibility_forward"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/forward" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_device_admin_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_click"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <ImageView
                        android:id="@+id/iv_device_admin_on_off_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_device_admin_forward"
                        android:layout_toEndOf="@id/iv_device_admin_on_off_img"
                        android:gravity="center_vertical|start"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:text="设备管理器权限"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_device_admin_forward"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/forward" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_batteryIgnore_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_click"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <ImageView
                        android:id="@+id/iv_batteryIgnore_on_off_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_batteryIgnore_forward"
                        android:layout_toEndOf="@id/iv_batteryIgnore_on_off_img"
                        android:gravity="center_vertical|start"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:text="忽略电池优化权限"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_batteryIgnore_forward"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/forward" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_app_detail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_click"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <ImageView
                        android:id="@+id/iv_app_detail_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_detail_forward"
                        android:layout_toEndOf="@id/iv_app_detail_img"
                        android:gravity="center_vertical|start"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:text="应用详情管理页面"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_detail_forward"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.5"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/forward" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_authority">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:text="开关:"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/sc_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:track="@drawable/switch_custom_track_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:text="该程序仅在熄屏的状态下生效:"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/sc_only_effect_in_screen_off"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:track="@drawable/switch_custom_track_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:text="该页面在任务列表中自动隐藏:"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/sc_auto_hide_in_task"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:track="@drawable/switch_custom_track_selector" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_long_press_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:text="长按触发时长:"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <com.lgh.volume.control.MySeekBar
                        android:id="@+id/sb_long_press_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tv_long_press_time"
                        android:max="2000"
                        android:background="@drawable/seekbar_bg"
                        android:paddingStart="7.5dp"
                        android:paddingEnd="7.5dp"
                        android:progressDrawable="@drawable/seekbar_progress_bg"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_thumb_normal"
                        android:thumbOffset="7.5dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vibration_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:text="振动反馈强度:"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <com.lgh.volume.control.MySeekBar
                        android:id="@+id/sb_vibration_strength"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tv_vibration_strength"
                        android:max="100"
                        android:background="@drawable/seekbar_bg"
                        android:paddingStart="7.5dp"
                        android:paddingEnd="7.5dp"
                        android:progressDrawable="@drawable/seekbar_progress_bg"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_thumb_normal"
                        android:thumbOffset="7.5dp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_setting">

                <me.codeboy.android.aligntextview.AlignTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="20dp"
                    android:text="@string/authorizationQuestion" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_explain">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/support_me" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>